<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EFF5"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Nome Completo User"
                android:id="@+id/textView_UserName"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="useremail@domain.com"
                android:id="@+id/textView_UserEmail"
                android:layout_below="@+id/textView_UserName"
                android:layout_alignStart="@+id/textView_UserName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="leveluser: baby "
                android:id="@+id/textView_UserLevel"
                android:layout_below="@+id/textView_UserEmail"
                android:layout_alignStart="@+id/textView_UserEmail" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text_Favoritos"
                android:id="@+id/favoritos_TextView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/favoritos_recyclerView"
                android:paddingLeft="10dp"

                android:layout_below="@+id/favoritos_TextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text_EventosRecentes"
                android:id="@+id/recentes_TextView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recentes_recyclerView"
                android:paddingLeft="10dp"
                android:layout_below="@+id/recentes_TextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            />

        </RelativeLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

