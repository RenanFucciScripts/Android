<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_mais"
    android:background="@color/color_blankBG"
    tools:context="com.example.renanfucci.hookahplace.MaisActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_SobreNos"
            android:id="@+id/button2"
            android:onClick="onClickCadastro"
            android:background="@color/colorWhiteMax"
            android:paddingLeft="24dp"
            android:textAllCaps="false"

            android:gravity="left|center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/imageView7"
            android:layout_toStartOf="@+id/imageView7" />

        <ImageButton
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView7"
            android:src="@drawable/ic_keyboard_arrow_right_white_48dp"
            android:background="@color/colorWhiteMax"
            android:tint="@color/colorGrayTransparent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:id="@+id/imageview1"
            android:background="@color/colorAccent"
            android:layout_marginLeft="24dp"
            android:layout_below="@id/button2"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_fale_conosco"
            android:id="@+id/button3"
            android:onClick="onClickCadastro"
            android:background="@color/colorWhiteMax"
            android:paddingLeft="24dp"
            android:textAllCaps="false"
            android:layout_below="@id/imageview1"
            android:gravity="left|center_vertical"
            android:layout_toLeftOf="@+id/imageView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView8"
            android:layout_below="@id/imageview1"
            android:src="@drawable/ic_keyboard_arrow_right_white_48dp"
            android:background="@color/colorWhiteMax"
            android:tint="@color/colorGrayTransparent"

            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:id="@+id/imageview2"
            android:background="@color/colorAccent"
            android:layout_marginLeft="24dp"
            android:layout_below="@id/button3"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/conte_a_um_amigo"
            android:id="@+id/button4"
            android:background="@color/colorWhiteMax"
            android:paddingLeft="24dp"
            android:textAllCaps="false"
            android:layout_below="@id/imageview2"
            android:gravity="left|center_vertical"
            android:layout_toLeftOf="@+id/imageView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView9"
            android:layout_below="@id/imageview2"
            android:src="@drawable/ic_keyboard_arrow_right_white_48dp"
            android:background="@color/colorWhiteMax"
            android:tint="@color/colorGrayTransparent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:layout_below="@+id/imageView9"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="48dp"
            android:src="@drawable/ic_keyboard_arrow_right_white_48dp"
            android:background="@color/colorWhiteMax"
            android:tint="@color/colorGrayTransparent"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_SobreosNiveis"
            android:id="@+id/button5"
            android:layout_alignTop="@+id/imageButton"
            android:layout_toLeftOf="@+id/imageButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorWhiteMax"
            android:paddingLeft="24dp"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/imageView6"
            android:layout_below="@+id/button5"
            android:background="@color/colorAccent"
            android:layout_marginLeft="24dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:layout_below="@+id/imageView6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_keyboard_arrow_right_white_48dp"
            android:background="@color/colorWhiteMax"
            android:tint="@color/colorGrayTransparent"        />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_AnunciSuaPromocao"
            android:id="@+id/button6"
            android:layout_below="@+id/imageView6"
            android:layout_toLeftOf="@+id/imageButton2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorWhiteMax"
            android:paddingLeft="24dp"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/button6"
            android:background="@color/colorAccent"
            android:layout_marginLeft="24dp"
            android:id="@+id/imageView11" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton3"
            android:layout_below="@+id/imageView11"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_keyboard_arrow_right_white_48dp"
            android:background="@color/colorWhiteMax"
            android:tint="@color/colorGrayTransparent"        />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_ajuda"
            android:id="@+id/button7"
            android:layout_below="@+id/imageView11"
            android:layout_toLeftOf="@+id/imageButton3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorWhiteMax"
            android:paddingLeft="24dp"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            />

        <RelativeLayout
            android:id="@+id/fb_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="48dp"
            android:padding="8dp"
            android:background="@color/colorWhiteMax">
            <com.facebook.login.widget.LoginButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/mais_login_fb"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sair_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fb_box"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:background="@color/colorWhiteMax"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sair"
                android:textColor="@color/colorWhiteMax"
                android:paddingRight="48dp"
                android:id="@+id/mais_button_sair"
                android:background="@color/colorNewACC"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/relativeLayout"
                android:layout_toEndOf="@+id/relativeLayout" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorNewACC"
                android:layout_alignTop="@id/mais_button_sair"
                android:layout_alignBottom="@id/mais_button_sair"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/relativeLayout">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:paddingLeft="4dp"
                    android:paddingTop="10dp"
                    android:paddingRight="6dp"
                    android:src="@drawable/ic_power_settings_new_white_48dp"/>

            </RelativeLayout>


        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
