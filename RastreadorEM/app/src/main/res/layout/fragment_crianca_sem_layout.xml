<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_crianca_sem_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        android:layout_below="@id/relativeLayout_primeiro"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        android:id="@+id/relativeLayout_primeiro"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout_sem_crianca"
            android:orientation="vertical" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="42dp"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/ic_cloud_download_white_18dp"
            android:background="@android:color/transparent"
            android:id="@+id/imageButton_download"
            android:layout_marginTop="16dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</RelativeLayout>
