<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_crianca_com_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        android:id="@+id/relativeLayout_primeiro">
        <TextView
            android:text="File in name"
            android:layout_width="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView_file_in_name" />

        <TextView
            android:text="datein: 22/11/16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView_date_in"
            android:layout_marginTop="16dp"
            android:layout_below="@id/textView_file_in_name"/>

        <TextView
            android:text="dateout: 25/11/16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView_date_in"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView_date_out" />

        <TextView
            android:text="whiteimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView_date_out"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView_last_stage" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="42dp"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/ic_cloud_download_white_18dp"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/imageButton_download" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        android:layout_below="@id/relativeLayout_primeiro"
        />
</RelativeLayout>
